server_tokens off;

server {
    listen 80 default_server;
    server_name {{ portainer_host }};

    location /.well-known/acme-challenge {
        root /var/www/letsencrypt/{{ portainer_host }};
        try_files $uri $uri/ =404;
    }

    location / {
        rewrite ^ https://$host$request_uri? permanent;
    }
}